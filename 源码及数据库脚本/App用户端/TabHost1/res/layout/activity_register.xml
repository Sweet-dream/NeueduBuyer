<?xml version="1.0" encoding="utf-8"?>
<!-- 插入整个布局的背景图片 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroung2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/tb_icon_actionbar_back" />

    <TextView
        android:id="@+id/userRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dip"
        android:text="用户注册 "
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 表格布局，包括账号和密码 -->

        <TableLayout
            android:id="@+id/registerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <!-- 表格的第一行，账号文本和输入框，黑色粗体字，重心靠右，四周扩充5个像素 -->

            <TableRow>

                <!-- "姓名"文本 -->

                <TextView
                    android:id="@+id/registerName"
                    android:layout_marginLeft="50dp"
                    android:padding="5dip"
                    android:text="姓名:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <!-- "账号"输入框，文本超出TextView的宽度的情况下，出现横拉条 -->

                <EditText
                    android:id="@+id/registerNameEdit"
                    android:layout_marginRight="30dp"
                    android:scrollHorizontally="true" />
            </TableRow>
            <!-- 表格的第二行，密码和密码输入框，黑色粗体字，重心靠右，扩充5个像素 -->

            <TableRow>

                <!-- "输入密码"文本 -->

                <TextView
                    android:id="@+id/enterPsw"
                    android:layout_marginLeft="50dp"
                    android:padding="5dip"
                    android:text="密码:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <!-- "密码"输入框；文本超出TextView的宽度的情况下，出现横拉条 -->

                <EditText
                    android:id="@+id/enterPswdEdit"
                    android:layout_marginRight="30dp"
                    android:password="true"
                    android:scrollHorizontally="true" />
            </TableRow>

            <TableRow>

                <!-- "账号"文本 -->

                <TextView
                    android:id="@+id/reEnterPsw"
                    android:layout_marginLeft="50dp"
                    android:padding="5dip"
                    android:text="确认密码:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <!-- "账号"输入框，文本超出TextView的宽度的情况下，出现横拉条 -->

                <EditText
                    android:id="@+id/reEnterPswEdit"
                    android:layout_marginRight="30dp"
                    android:scrollHorizontally="true" />
            </TableRow>
            <!-- 表格的第二行，密码和密码输入框，黑色粗体字，重心靠右，扩充5个像素 -->

            <TableRow>

                <!-- "身份证号"文本 -->

                <TextView
                    android:id="@+id/idCardNum"
                    android:layout_marginLeft="50dp"
                    android:padding="5dip"
                    android:text="身份证号:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <!-- "账号"输入框，文本超出TextView的宽度的情况下，出现横拉条 -->

                <EditText
                    android:id="@+id/idCardNumEdit"
                    android:layout_marginRight="30dp"
                    android:scrollHorizontally="true" />
            </TableRow>

            <TableRow>

                <!-- "联系电话"文本 -->

                <TextView
                    android:id="@+id/phoneNum"
                    android:layout_marginLeft="50dp"
                    android:padding="5dip"
                    android:text="联系电话:"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <!-- "密码"输入框；文本超出TextView的宽度的情况下，出现横拉条 -->

                <EditText
                    android:id="@+id/phoneNumEdit"
                    android:layout_marginRight="30dp"
                    android:password="true"
                    android:scrollHorizontally="true" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <!-- "登录"按钮，重心垂直居中，距顶部和底部3个像素，左右扩充80个像素 -->

    <RadioButton
        android:id="@+id/agreeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:checked="false"
        android:text="我同意xxxxxxxxxxxxxxxxxxx" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="3dip"
        android:paddingLeft="80dip"
        android:paddingRight="80dip"
        android:paddingTop="3dip"
        android:text="注册 " />

</LinearLayout>