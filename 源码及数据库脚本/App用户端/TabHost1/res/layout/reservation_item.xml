<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:id="@+id/nursephoto"/>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="用户编号："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="user_account"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/user_account"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="护工编号："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="nurseid"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/nurseid"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="预约信息编号："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="reservation_id"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/reservation_id"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="服务起始时间："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="begin_time"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/begin_time"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="服务结束时间："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <TextView
                android:text="end_time"
                android:textSize="18dp"
                android:id="@+id/end_time"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="金额："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="money"
                android:textSize="18dp"
                android:id="@+id/money"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
             <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="服务地点："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="place"
                android:textSize="18dp"
                android:id="@+id/place"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            
        
    </LinearLayout>

</LinearLayout>