<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:id="@+id/nursepic"/>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="护工名字："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="employee_name"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/nurse_name"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="护工ID："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="employee_id"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/nurse_id"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="是否空闲："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="employee_id"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/nurse_isfress"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="护工专业："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="employee_mobile"
                android:textSize="18dp"
                android:layout_weight="3"
                android:id="@+id/nurse_major"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="简介："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <TextView
                android:text="department_id"
                android:textSize="18dp"
                android:id="@+id/nurse_instruce"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="入职时间："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="department_id"
                android:textSize="18dp"
                android:id="@+id/nurse_create"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
             <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="性别："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="department_id"
                android:textSize="18dp"
                android:id="@+id/nurse_sex"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
             <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="地址："
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="department_id"
                android:textSize="18dp"
                android:id="@+id/nurse_adress"
                android:layout_weight="3"
                android:textColor="#ff149691"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>