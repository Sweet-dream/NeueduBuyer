<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroung2"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/goback"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="护工个人信息"
                android:textColor="#000000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="基本信息"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/nameTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:text="晓玲"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/nameIdTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="护工ID："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/nameId"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>
           

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:orientation="horizontal" >

               <TextView
                   android:id="@+id/sexText"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="性别："
                   android:textColor="#000000"
                   android:textSize="25sp" />

               <TextView
                   android:id="@+id/sex"
                   android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:text="女"
                   android:textColor="#000000"
                   android:textSize="25sp" />
           </LinearLayout>
           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="年龄："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:text="18"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/timeTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="入职时间："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="xx年xx月xx日"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/spaceTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否空闲："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/space"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/specialtyText"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="护工专业："
                     android:textColor="#000000"
                     android:textSize="25sp" />

                 <TextView
                     android:id="@+id/major"
                     android:layout_width="32dp"
                     android:layout_height="match_parent"
                     android:layout_weight="0.50"
                     android:text="计算机"
                     android:textColor="#000000"
                     android:textSize="25sp" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/experience"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:textColor="#000000"
                    android:textSize="25sp" />
                
                <TextView
                    android:id="@+id/experienceText"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="年工作经验"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/addressTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地址："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="xxxxxxxxxxxxxxxx"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/introduceTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="简介："
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/introduce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="你好！我是xxx"
                    android:textColor="#000000"
                    android:textSize="25sp" />
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/character"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="性格特点："
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/useAssess"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="用户评价"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >
            <TextView
                    android:id="@+id/wageTest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥："
                    android:textColor="#ff0000"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/wage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="xxxx"
                    android:textColor="#ff0000"
                    android:textSize="45sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6" />

                <Button
                    android:id="@+id/submitOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#33cc33"
                    android:paddingBottom="3dip"
                    android:paddingLeft="80dip"
                    android:paddingRight="80dip"
                    android:paddingTop="3dip" 
                    android:textSize="30dp"
                    android:text="预约"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>