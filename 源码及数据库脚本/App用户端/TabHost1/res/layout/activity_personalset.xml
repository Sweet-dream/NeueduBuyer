<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none" >

    

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroung2"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="完善个人信息"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/photoSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/photoSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                    android:textStyle="bold" 
                        android:text="头像" />

                    <ImageView
                        android:id="@+id/photoImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nameSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    
                    android:textColor="#000000"
                    android:textStyle="bold" android:text="姓名" />

                <EditText
                    android:id="@+id/nameSetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />

                <TextView
                    android:id="@+id/sexSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                   android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="性别" />

                <RadioGroup
                    android:id="@+id/sexSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/boy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/girl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="女" />
                </RadioGroup>

                <TextView
                    android:id="@+id/idCardSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/idCardSetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />

                <TextView
                    android:id="@+id/birthdaySet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="生日" />

                <EditText
                    android:id="@+id/birthdaySetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />

                <TextView
                    android:id="@+id/addressSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="地址" />

                <EditText
                    android:id="@+id/adressSetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />

                <TextView
                    android:id="@+id/phoneSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="联系电话" />

                <EditText
                    android:id="@+id/phoneSetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />

                <TextView
                    android:id="@+id/eMialSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold" 
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/eMialSetEdit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editsharp" />
            </LinearLayout>

            <Button
                android:id="@+id/saveSet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="3dip"
                android:paddingLeft="80dip"
                android:enabled="false"
                android:paddingRight="80dip"
                android:paddingTop="3dip"
                android:text="保存 " />
        </LinearLayout>
 

</ScrollView>